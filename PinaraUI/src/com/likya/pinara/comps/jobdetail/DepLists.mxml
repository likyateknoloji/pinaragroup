<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	
	
	<fx:Script>
		<![CDATA[
			
			public function getDepInfo(item:Object):String {
				var depInfo:String = "";
				//Alert.show("item : " + XML(item).jsName);
				if(XML(item).jsId != null) {
					depInfo += "[id:" + XML(item).jsId + "]";
				}
				if(XML(item).jsName != null) {
					depInfo += ("[" + XML(item).jsName + "]");
				}
				
				return depInfo;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<s:HGroup verticalAlign="baseline" width="90%">
		<s:Label text="Bekleyen işler :" width="120" paddingLeft="10" />
		<s:List id="waitingMeJobs" height="60" width="100%">
			<s:dataProvider>
				<mx:ArrayCollection />
			</s:dataProvider>
		</s:List>
	</s:HGroup>
	<s:HGroup verticalAlign="baseline" width="90%">
		<s:Label text="Beklediğim işler :" width="120" paddingLeft="10" />
		<s:List id="meToWaitJobs" height="60" width="100%" labelFunction="getDepInfo"> 
			<s:dataProvider>
				<mx:ArrayCollection/>
			</s:dataProvider>
		</s:List>
	</s:HGroup>
</s:Group>
