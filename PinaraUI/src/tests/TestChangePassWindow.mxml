	<fx:Script>
		<![CDATA[
			import com.likya.comps.crud.user.ChangePass;
			
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.resources.ResourceBundle;
			
			
			protected function button1_clickHandler(event:MouseEvent):void {
				var dummyWindow:ChangePass = PopUpManager.createPopUp(this, ChangePass, true) as ChangePass;

				dummyWindow.title =  resourceManager.getString('messages', 'windowTitle');
				
				dummyWindow.userNameLbl = resourceManager.getString('messages', 'userName');
				dummyWindow.oldPassLbl = resourceManager.getString('messages', 'oldPassword');
				dummyWindow.newPassLbl = resourceManager.getString('messages', 'newPassword');
				dummyWindow.confNewPassLbl = resourceManager.getString('messages', 'confirmNewPassword');
				dummyWindow.okBtnLbl = resourceManager.getString('messages', 'change');
				dummyWindow.cnclBtnLbl = resourceManager.getString('messages', 'cancel');
				
				PopUpManager.centerPopUp(dummyWindow);
				dummyWindow.setFocus();
			}
			
			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				var myResources:ResourceBundle = new ResourceBundle("en_US","locale\messages");
				myResources.content['TITLE'] = "Pinara Test - English Version";
				resourceManager.addResourceBundle(myResources);
				
				
				myResources = new ResourceBundle("tr_TR","locale\messages");
				myResources.content['TITLE'] = "Pınara Test - Türkçe Sürümü";
				resourceManager.addResourceBundle(myResources);
				
				resourceManager.update();
				
				
			}
			
		]]>
	</fx:Script>

